<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/action_menu">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="STAPL"
            android:textSize="20dp">

        </TextView>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:padding="15dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView_main_menu"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--빠른 번역-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rapid_translation"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="빠른 번역"
                    android:textSize="25sp"></TextView>

                <Button
                    android:id="@+id/change_to_language"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="한국어 -> 영어" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/target_translation_word"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="번역할 단어, 문장을 입력해주세요."
                            android:textSize="15sp">

                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/button_to_translation"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:background="@color/colorPrimary" />

                </LinearLayout>

                <TextView
                    android:id="@+id/result_translation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:padding="5dp"
                    android:text="hellohello"
                    android:textSize="15sp" />
            </LinearLayout>

            <!--오늘의 단어@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@2-->
            <LinearLayout
                android:id="@+id/today_word_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/today_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="오늘의 단어"
                    android:textSize="25sp"></TextView>
                <!--추가될 레이아웃 정보-->
                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="hi">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="해석">

                    </TextView>
                </LinearLayout>-->
            </LinearLayout>

            <!--시험정보-->
            <LinearLayout
                android:id="@+id/example_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시험 정보"
                    android:textSize="25sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:text="토익 시험 정보"
                    android:paddingLeft="11dp"/>

                <LinearLayout
                    android:id="@+id/toeicInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="10">

                        <TextView
                            android:id="@+id/toeic_th"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="회차"
                            android:gravity="center"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/toeic_reception"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="접수일"
                            android:gravity="center"
                            android:layout_weight="4"/>

                        <TextView
                            android:id="@+id/toeic_test_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="시험일"
                            android:gravity="center"
                            android:layout_weight="2.5"
                            />

                        <TextView
                            android:id="@+id/toeic_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="성적발표"
                            android:layout_weight="2.5"
                            android:gravity="center"/>

                    </LinearLayout>


                   <!-- <TextView
                        android:id="@+id/toeic1"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center|left"
                        android:text="2020202020 000차 " />

                    <TextView
                        android:id="@+id/toeic2"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center|left"
                        android:text="2020202020 000차 " />
-->
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:text="토스 시험 정보" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center|left"
                    android:text="2020202020 000차 " />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:text="토플 시험 정보" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center|left"
                    android:text="2020202020 000차 " />



        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView_main_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@color/lightblue"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_menu"
        tools:ignore="MissingConstraints" />

