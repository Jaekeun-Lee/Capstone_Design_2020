<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFAFDA0"
    android:orientation="vertical"

    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:orientation="vertical"
            android:background="@drawable/radiusrec"
            android:layout_margin="15dp"
            android:paddingTop="100dp"
            android:paddingLeft="30dp"
            android:paddingRight="15dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="회원가입"
                android:fontFamily="@font/nanumsquareroundr"
                android:textColor="#000"
                android:textSize="23sp"
                android:layout_marginBottom="50dp"
                android:gravity="center"
                >

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이메일"
                android:textSize="15sp"
                android:textColor="#000000"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:textColorHint="#aaa">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="email@email.com"
                    android:textColor="#000"
                    android:inputType="textShortMessage"
                    android:id="@+id/sign_up_user_id"
                    >
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:textSize="15sp"
                android:textColor="#000000"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:textColorHint="#aaa">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Password"
                    android:textColor="#ffffff"
                    android:inputType="textShortMessage"
                    android:id="@+id/sign_up_user_pass"
                    >
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="15sp"
                android:textColor="#000000"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:textColorHint="#aaa">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Name"
                    android:textColor="#ffffff"
                    android:inputType="textShortMessage"
                    android:id="@+id/sign_up_user_name"
                    >
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="나이"
                android:textSize="15sp"
                android:textColor="#000000"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:textColorHint="#aaa">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Age"
                    android:textColor="#ffffff"
                    android:inputType="number"
                    android:id="@+id/sign_up_user_age"
                    >
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:paddingTop="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                >

                <Button
                    android:id="@+id/Button_back_to_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:background="#75eeeeee"
                    android:gravity="center"
                    android:text="취소"
                    android:textSize="15dp"></Button>

                <Button
                    android:id="@+id/Button_sign_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:background="#FFFAFDA0"

                    android:text="가입"
                    android:textColor="#000000"
                    android:textSize="15dp">

                </Button>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>